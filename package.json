{
  "name": "agregore-browser",
  "version": "1.0.0-22",
  "description": "A minimal web browser for the distributed web",
  "main": "app/main.js",
  "scripts": {
    "test": "npm run lint",
    "start": "electron .",
    "debug": "env NODE_ENV=debug electron --trace-uncaught .",
    "build": "electron-builder build --publish never",
    "build-all": "electron-builder build -mwl",
    "lint": "standard --fix",
    "preversion": "npm run test"
  },
  "build": {
    "npmRebuild": false,
    "asar": false,
    "productName": "Agregore Browser",
    "appId": "agregore.mauve.moe",
    "files": [
      "build/**/*",
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "protocols": [
      {
        "name": "hypercore-protocol",
        "schemes": [
          "hyper",
          "dat"
        ]
      },
      {
        "name": "webpages",
        "schemes": [
          "http",
          "https"
        ]
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RangerMauve/agregore-browser.git"
  },
  "keywords": [
    "dat",
    "hypercore",
    "hyper",
    "hyperdrive",
    "ipfs",
    "browser",
    "dweb"
  ],
  "author": "rangermauve <ranger@mauve.moe> (https://mauve.moe/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/RangerMauve/agregore-browser/issues"
  },
  "homepage": "https://github.com/RangerMauve/agregore-browser#readme",
  "devDependencies": {
    "electron": "^11.0.0-beta.9",
    "electron-builder": "^21",
    "electron-rebuild": "^1.11.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "@geut/hyperdrive-promise": "^3.0.1",
    "dat-fetch": "^5.0.1",
    "dat-sdk": "^2.1.0",
    "dat-sdk-old": "^1.0.0",
    "electron-extensions": "^6.0.4",
    "fs-extra": "^9.0.1",
    "gemini-fetch": "^1.0.0",
    "gemini-to-html": "^1.0.0",
    "ipfs": "^0.46.0",
    "mime": "^2.4.6",
    "rc": "^1.2.8",
    "scoped-fs": "^1.4.1",
    "whatwg-mimetype": "https://github.com/jsdom/whatwg-mimetype#v2.3.0"
  }
}
