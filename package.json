{
  "name": "agregore-browser",
  "version": "1.0.0-40",
  "description": "A minimal web browser for the distributed web",
  "main": "app/main.js",
  "scripts": {
    "test": "npm run lint",
    "start": "electron .",
    "debug": "env NODE_ENV=debug electron --trace-uncaught .",
    "builder": "electron-builder build --publish never",
    "builder-all": "electron-builder build -mwl",
    "lint": "standard --fix",
    "preversion": "npm run test",
    "postinstall": "./rebuild.sh"
  },
  "standard": {
    "ignore": [
      "bundle.js"
    ]
  },
  "build": {
    "npmRebuild": false,
    "asar": false,
    "productName": "Agregore Browser",
    "appId": "agregore.mauve.moe",
    "files": [
      "build/**/*",
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "protocols": [
      {
        "name": "hypercore-protocol",
        "schemes": [
          "hyper",
          "dat"
        ]
      },
      {
        "name": "webpages",
        "schemes": [
          "http",
          "https"
        ]
      },
      {
        "name": "gemini",
        "schemes": [
          "gemini"
        ]
      },
      {
        "name": "bittorrent",
        "schemes": [
          "magnet",
          "bittorrent"
        ]
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ],
      "category": "Development"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RangerMauve/agregore-browser.git"
  },
  "keywords": [
    "dat",
    "hypercore",
    "hyper",
    "hyperdrive",
    "ipfs",
    "browser",
    "dweb"
  ],
  "author": "rangermauve <ranger@mauve.moe> (https://mauve.moe/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/RangerMauve/agregore-browser/issues"
  },
  "homepage": "https://github.com/RangerMauve/agregore-browser#readme",
  "devDependencies": {
    "electron": "11",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^1.11.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "bt-fetch": "^1.2.0",
    "create-desktop-shortcuts": "^1.4.0",
    "data-uri-to-buffer": "^3.0.1",
    "electron-extensions": "^6.0.4",
    "fs-extra": "^9.0.1",
    "gemini-fetch": "^1.0.0",
    "gemini-to-html": "^1.0.0",
    "gun-fetch": "^2.4.1",
    "hyper-sdk": "^3.0.7",
    "hypercore-fetch": "^8.3.1",
    "ipfs-core": "^0.10.0",
    "js-ipfs-fetch": "^3.3.0",
    "mime": "^2.4.6",
    "rc": "^1.2.8",
    "sanitize-filename": "^1.6.3",
    "scoped-fs": "^1.4.1",
    "whatwg-mimetype": "https://github.com/jsdom/whatwg-mimetype#v2.3.0"
  }
}
